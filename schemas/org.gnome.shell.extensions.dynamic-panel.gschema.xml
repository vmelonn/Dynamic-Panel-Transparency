<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.dynamic-panel" path="/org/gnome/shell/extensions/dynamic-panel/">
    <key name="transparent-opacity" type="i">
      <default>0</default>
      <summary>Transparent opacity</summary>
      <description>Opacity when no windows are present (0-100)</description>
    </key>
    <key name="semi-opaque-opacity" type="i">
      <default>85</default>
      <summary>Semi-opaque opacity</summary>
      <description>Opacity when windows are present (0-100)</description>
    </key>
    <key name="opaque-opacity" type="i">
      <default>100</default>
      <summary>Opaque opacity</summary>
      <description>Opacity in fullscreen/overview (0-100)</description>
    </key>
    <key name="animation-duration" type="i">
      <default>300</default>
      <summary>Animation duration</summary>
      <description>Transition duration in milliseconds</description>
    </key>
    <key name="maximized-opaque" type="b">
      <default>false</default>
      <summary>Maximized windows make panel opaque</summary>
      <description>Treat maximized windows like fullscreen</description>
    </key>
    <key name="debug-logging" type="b">
      <default>false</default>
      <summary>Enable debug logging</summary>
      <description>Show detailed console output</description>
    </key>
  </schema>
</schemalist>

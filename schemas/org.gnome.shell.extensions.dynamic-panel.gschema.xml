<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.dynamic-panel" path="/org/gnome/shell/extensions/dynamic-panel/">
    <key name="transparent-opacity" type="i">
      <default>0</default>
      <summary>Transparent opacity percentage</summary>
      <description>Opacity when no windows are present (0-100)</description>
      <range min="0" max="100"/>
    </key>
    <key name="semi-opaque-opacity" type="i">
      <default>80</default>
      <summary>Semi-opaque opacity percentage</summary>
      <description>Opacity when windows are present (0-100)</description>
      <range min="0" max="100"/>
    </key>
    <key name="opaque-opacity" type="i">
      <default>100</default>
      <summary>Opaque opacity percentage</summary>
      <description>Opacity in fullscreen or overview (0-100)</description>
      <range min="0" max="100"/>
    </key>
    <key name="animation-duration" type="i">
      <default>300</default>
      <summary>Animation duration in milliseconds</summary>
      <description>Duration of transparency transitions</description>
      <range min="0" max="1000"/>
    </key>
    <key name="maximized-opaque" type="b">
      <default>false</default>
      <summary>Make panel opaque for maximized windows</summary>
      <description>When enabled, maximized windows will make the panel fully opaque (like fullscreen windows)</description>
    </key>
    <key name="debug-logging" type="b">
      <default>false</default>
      <summary>Enable debug logging</summary>
      <description>Show detailed console output for troubleshooting window detection</description>
    </key>
  </schema>
</schemalist>
